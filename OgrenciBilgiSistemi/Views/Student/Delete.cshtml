@model OgrenciBilgiSistemi.Models.Student

@{
    ViewData["Title"] = "Öğrenci Sil";
}

<h2>Öğrenci Sil</h2>

<h3>Bu öğrenciyi silmek istediğinize emin misiniz?</h3>

<div>
    <h4>@Model.FullName</h4>
    <p><strong>Yaş:</strong> @Model.Age</p>
    <p><strong>Bölüm:</strong> @Model.Department</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
